generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id           String   @id @default(uuid())
  name         String
  fatherName   String
  age          String
  dateOfBirth  DateTime
  gender       String
  grade        String
  classSection String
  rollNumber   String   @unique
  gpa          String
  email        String   @unique
  phoneNumber  String
  status       String
  address      String
  subjects     String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
